<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:src="@drawable/background02"
        android:scaleType="centerCrop"
        android:id="@+id/foreground3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    
    <FrameLayout
        android:id="@+id/basketLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        
        <FrameLayout
            android:id="@+id/basket"
            android:background="@drawable/basket"
            android:layout_width="170dp"
            android:layout_height="150dp">

            <View
                android:id="@+id/basketWeb"
                android:layout_marginStart="35dp"
                android:layout_marginTop="70dp"
                android:layout_width="100dp"
                android:layout_height="10dp"/>

        </FrameLayout>
        
    </FrameLayout>

    <FrameLayout
        android:id="@+id/ballLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


    <com.basket.game.core.library.CustomImageButton
        android:id="@+id/menu"
        android:layout_width="50dp"
        android:layout_height="45dp"
        android:src="@drawable/menu"
        android:layout_margin="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.basket.game.core.library.CustomImageButton
        android:id="@+id/pause"
        android:layout_width="50dp"
        android:layout_height="45dp"
        android:layout_margin="10dp"
        android:src="@drawable/pause"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        style="@style/BasicText"
        tools:text="2000"
        android:textSize="20sp"
        android:id="@+id/scores"
        android:background="@drawable/score01"
        android:layout_width="100dp"
        android:layout_height="35dp"
        app:layout_constraintBottom_toBottomOf="@+id/menu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/menu" />

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/energyLayout"
        android:background="@drawable/energy"
        android:gravity="center_vertical"
        android:paddingTop="2dp"
        android:layout_marginBottom="20dp"
        android:layout_width="300dp"
        android:layout_height="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_weight="1"/>

        <LinearLayout
            android:id="@+id/energyContainer1"
            android:layout_width="wrap_content"
            android:layout_height="18dp">

            <ImageView
                style="@style/EnergyCell"/>

            <ImageView
                style="@style/EnergyCell"/>

            <ImageView
                style="@style/EnergyCell"/>

            <ImageView
                style="@style/EnergyCell"/>

            <ImageView
                style="@style/EnergyCell"/>

            <ImageView
                style="@style/EnergyCell"/>

            <ImageView
                style="@style/EnergyCell"/>

            <ImageView
                style="@style/EnergyCell"/>

            <ImageView
                style="@style/EnergyCell"/>

            <ImageView
                style="@style/EnergyCell"/>

            <ImageView
                style="@style/EnergyCell"/>

            <ImageView
                style="@style/EnergyCell"/>

            <ImageView
                style="@style/EnergyCell"/>

        </LinearLayout>

        <View
            android:layout_width="60dp"
            android:layout_height="1dp"/>

        <LinearLayout
            android:id="@+id/energyContainer2"
            android:layout_width="wrap_content"
            android:layout_height="18dp">

            <ImageView
                style="@style/EnergyCell"/>

            <ImageView
                style="@style/EnergyCell"/>

            <ImageView
                style="@style/EnergyCell"/>

            <ImageView
                style="@style/EnergyCell"/>

            <ImageView
                style="@style/EnergyCell"/>

            <ImageView
                style="@style/EnergyCell"/>

            <ImageView
                style="@style/EnergyCell"/>

            <ImageView
                style="@style/EnergyCell"/>

            <ImageView
                style="@style/EnergyCell"/>

            <ImageView
                style="@style/EnergyCell"/>

            <ImageView
                style="@style/EnergyCell"/>

            <ImageView
                style="@style/EnergyCell"/>

            <ImageView
                style="@style/EnergyCell"/>


        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_weight="1"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>