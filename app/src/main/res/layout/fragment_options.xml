<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:src="@drawable/background02"
        android:scaleType="centerCrop"
        android:id="@+id/foreground12"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/diamonds"
            style="@style/BasicText"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/diamonds"
            android:paddingEnd="20dp"
            android:textSize="18sp"
            tools:text="200" />

        <LinearLayout
            android:layout_width="340dp"
            android:layout_height="300dp"
            android:layout_gravity="center"
            android:layout_marginVertical="20dp"
            android:background="@drawable/text_box01"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                style="@style/BasicText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"
                android:text="@string/options"
                android:textSize="38sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp">

                <com.basket.game.core.library.CustomImageButton
                    android:id="@+id/left"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:src="@drawable/arrow01" />

                <ImageView
                    android:id="@+id/ball"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginHorizontal="20dp"
                    android:src="@drawable/ball01" />

                <com.basket.game.core.library.CustomImageButton
                    android:id="@+id/right"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:rotationY="180"
                    android:src="@drawable/arrow01" />

            </LinearLayout>

            <TextView
                android:id="@+id/selection"
                style="@style/BasicText"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/score01"
                android:textSize="18sp"
                tools:text="selected" />

        </LinearLayout>

        <com.basket.game.core.library.CustomImageButton
            android:id="@+id/close"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="148dp"
            android:src="@drawable/close" />

</FrameLayout>