<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BasicText">
        <item name="android:fontFamily">@font/dilo_world</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <style name="EnergyCell">
        <item name="android:layout_height">16dp</item>
        <item name="android:layout_width">6dp</item>
        <item name="android:layout_marginEnd">1dp</item>
        <item name="android:src">@drawable/energy_point</item>
    </style>
</resources>